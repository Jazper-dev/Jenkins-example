pipeline {
    agent any

    environment {
        // Replace this with your actual Firebase project name
        FIREBASE_PROJECT = 'auto-deploy01'
    }

    stages {
        stage('Clone') {
            steps {
                echo 'Cloning repo...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Installing dependencies and building the project...'
                dir('auto-deploy') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Add your test commands here if needed
            }
        }

        stage('Install Firebase CLI') {
            steps {
                echo 'Installing Firebase CLI locally...'
                dir('auto-deploy') {
                    sh 'npm install firebase-tools'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to Firebase Hosting...'
                withCredentials([string(credentialsId: 'FIREBASE_TOKEN', variable: 'FIREBASE_TOKEN')]) {
                    dir('auto-deploy') {
                        sh 'npx firebase deploy --only hosting:$FIREBASE_PROJECT --token "$FIREBASE_TOKEN"'
                    }
                }
            }
        }
    }

    post {
        failure {
            echo 'Deployment failed...'
        }
        success {
            echo 'Deployment succeeded!'
        }
    }
}
