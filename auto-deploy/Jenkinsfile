pipeline {
    agent any
    
    environment {
        // Define Firebase token as a credential in Jenkins
        FIREBASE_CREDENTIALS = credentials('firebase-token')
    }
    
    stages {
        stage('Clone') {
            steps {
                echo 'Cloning repo...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Installing dependencies and building the project...'
                dir('auto-deploy') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                // Add your test commands here if needed
            }
        }
        
        stage('Install Firebase CLI') {
            steps {
                echo 'Installing Firebase CLI locally...'
                dir('auto-deploy') {
                    sh 'npm install firebase-tools'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying to Firebase Hosting...'
                dir('auto-deploy') {
                    // Using service account approach instead of token (recommended by Firebase)
                    withCredentials([file(credentialsId: 'firebase-service-account', variable: 'GOOGLE_APPLICATION_CREDENTIALS')]) {
                        sh 'npx firebase deploy --only hosting:auto-deploy01'
                    }
                    
                    // Alternative approach using token if service account isn't set up
                    // withCredentials([string(credentialsId: 'firebase-token', variable: 'FIREBASE_TOKEN')]) {
                    //     sh 'npx firebase deploy --only hosting:auto-deploy01 --token $FIREBASE_TOKEN'
                    // }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed...'
        }
    }
}